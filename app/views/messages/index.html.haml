.notification
  .notice チャットグループが作成されました

.sidebar
  .sidebar__user
    .sidebar__user
      .sidebar__user-content
        .sidebar__user-name テスト
        = link_to '#', class: "sidebar__new" do
          = fa_icon "pencil-square-o"
        = link_to '#', class: "sidebar__edit" do
          = fa_icon "cog"
  = render partial: "sidebar"

.chat
  .chat__header
    .chat__header__group
      .chat__header__group-name MaimaiWorld
      .chat__header__group-edit-btn Edit
    .chat__header__group-member
      Member :
      %i まいまい

  .chat__body
    = render partial: "messages"

  .chat__footer
    %form{class: "chat__footer__form", action: "/", method: :post}
      .chat__footer__form__body
        %input{placeholder: "type a message", class: "new-message", type: "text" }
          %label.upload-label{for: "upload-icon" }
            = fa_icon("image")
      %input{type: "submit", value: "SEND", class: "new-message-send-btn" }
